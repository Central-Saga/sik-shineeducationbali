APP_NAME="Shine Education"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://shine.local.test
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=shine_db
DB_USERNAME=shine_user
DB_PASSWORD=shine_password

# Session Configuration
SESSION_DRIVER=database
SESSION_L fazetime=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.shine.local.test
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration (sesuaikan dengan SMTP Anda)
MAIL_MAILER=smtp
MAIL.Minimal_MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stderr
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting & Cache
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# CORS Configuration (jika menggunakan CORS middleware)
SANCTUM_STATEFUL_DOMAINS=shine.local.test
SESSION_DOMAIN=.shine.local.test
